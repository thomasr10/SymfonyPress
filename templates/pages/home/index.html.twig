{% extends 'base.html.twig' %}

{% block title %}Home | SymfonyPress{% endblock %}

{% block body %}
<div class="categories-container">
    <ul>
        {% for category in categories %}
            <li><a href="{{ path('app_article_category', { slug: category.slug }) }}" class="category-name">{{category.name}}</a></li>
        {% endfor %}
    </ul>
</div>
<main>
    <section class="articles-container">
        {% for article in articles %}    
            {% include 'components/article-card.html.twig' with { article: article } %}
        {% endfor %}
    </section>
</main>
{% endblock %}
